@model Product

@{
    ViewBag.Title = "Product Details";
}

    <h3 class="mt-3">Product: <span class="text-uppercase">@Model.Name</span></h3>

<form class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Quantity</label>
        <label class="col-form-label ml-5">@Model.Quantity</label>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold">Description</label>
        <p class="col-form-label ml-5">@Model.Desc</p>
    </div>
</form>