@model Product

@{
    ViewBag.Title = "Add Product";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h3 class="mt-3">Add New Product</h3>

<form asp.controller="Home" asp.action="AddProduct" method="post" class="mt-3 font-weight-bold">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="50 character limit" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Desc" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="Desc" class="form-control" placeholder="150 character limit (optional)" />
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input asp-for="Quantity" type="number" min="0" max="100" step="1" class="form-control" placeholder="Whole positive number (ex. 12)" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-dark btn-success" value="Add Product" />
    </div>
</form>
