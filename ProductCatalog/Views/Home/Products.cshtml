@model IEnumerable<Product>

@{
    ViewBag.Title = "Product Catalog";
}

@{
    if (Model.Count() == 0)
    {
        <div class="alert alert-warning">
            <strong>There are no products in the catalog. <a asp-controller="home" asp-action="addproduct">Add a product</a></strong>
        </div>
    }
    else
    {
        <h4 class="mt-3 text-info">Select an item to view it's details</h4>
        <table class="table table-hover table-sm mt-3">
            <caption>List of products in the catalog</caption>
            <thead>
                <tr>
                    <th scope="col">Product #</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr class="table-light">
                        <td scope="row" class="mt-3">@product.Id</td>
                        <th scope="row" class="mt-3 text-uppercase"><a asp-controller="home" asp-action="details" asp-route-id="@product.Id" class="text-muted">@product.Name</a></th>
                        <td scope="row" class="mt-3">@product.Desc</td>
                        <td scope="row" class="mt-3">@product.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}